<%= form_for(career) do |f| %>
  <% if career.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(career.errors.count, "error") %> prohibited this career from being saved:</h2>

      <ul>
      <% career.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :company_name %>
    <%= f.text_field :company_name %>
  </div>
  
  <div class="field">
    <%= f.label :industry %>
    <%= hidden_field_tag 'industry_id[]' %>
    <% @industries.each do |industry| %>
      <label>
        <%= check_box_tag 'industry_id[]', industry.id, false, :id => "industry_#{industry.id}" %>
        <%= industry.name %>
      </label>
    <% end %>
  </div>
  
  <div class="field">
    <%= f.label :occupation %>
    <%= hidden_field_tag 'occupation_id[]' %>
    <% @occupations.each do |occupation| %>
      <label>
        <%= check_box_tag 'occupation_id[]', occupation.id, false, :id => "occupation_#{occupation.id}" %>
        <%= occupation.name %>
      </label>
    <% end %>
  </div>
  
  <div class="hidden-field">
    <%= f.hidden_field :person_id, :value => current_person.id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
