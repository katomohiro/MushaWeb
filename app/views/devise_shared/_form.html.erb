<%= render :partial => 'devise_shared/must_register', :locals => {:f => f} %>

<% if is_edit %>
  
  <div class="field">
    <%= f.label :area_id %><br />
    <%= f.select :area_id, @areas.map { |area| [area.name, area.id] }, :include_blank => true %>
  </div>
  
  <%if model = "User" %>
  <% elsif model = "Person" %>
    
    <div class="field">
      <%= f.label :other_naite %><br />
      <%= f.text_area :other_naite, autofocus: true %>
    </div>
    
  <% end %>
<% end %>

<%= render :partial => 'devise_shared/password_and_submit', :locals => {:f => f, :is_edit => is_edit} %>


